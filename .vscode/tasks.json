{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I${workspaceFolder}/headers",
                "-I${workspaceFolder}/SDL2-2.0.10/include",
                "-L${workspaceFolder}/SDL2-2.0.10/lib",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}